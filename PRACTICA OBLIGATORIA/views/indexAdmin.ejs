                                                                    <%= a.id_aviso%>:
                                                                        <%=a.tipo%>
                                                                </h1>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <input type="text" class="form-select" value="<%=a.id_aviso%>" style="display:none;" name="idAviso" id="idAviso">
                                                            <input type="text" class="form-select" value="<%=a.id_usuario%>" style="display:none;" name="idUsuario" id="idUsuario">
                                                            <div class="modal-body">
                                                                <h4>
                                                                    <%=a.nombre%>
                                                                </h4>
                                                                <h6>Fecha:
                                                                    <%=a.fecha %>
                                                                </h6>
                                                                <h6>Comunicaciones:
                                                                    <%=a.subtipo %>
                                                                </h6>
                                                                <h6>Perfil:
                                                                    <%=a.tipo_usuario %>
                                                                </h6>
                                                                <br>
                                                                <h6>Observaciones: </h6>
                                                                <div style="border: 2px solid;">
                                                                    <%=a.texto %>
                                                                </div>
                                                                <br>
                                                                <h6>Comentarios del Técnico: </h6>
                                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comentarioTecn" id="comentarioTecn"></textarea>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Terminar Aviso</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                            <!-- Modal Eliminar Aviso -->
                                            <div class="modal fade" id="modal2EliminarAviso<%=a.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <form class="d-flex" role="search" action="/eliminateAlert" method="POST">

                                                            <div class="modal-header">
                                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Aviso
                                                                    <%=a.id%>:
                                                                        <%=a.tipo%>
                                                                </h1>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <input type="text" class="form-select" value="<%=a.id_aviso%>" style="display:none;" name="idAviso" id="idAviso">
                                                                <input type="text" class="form-select" value="<%=a.id_usuario%>" style="display:none;" name="idUsuario" id="idUsuario">
                                                                <h4>
                                                                    <%=a.nombre%>
                                                                </h4>
                                                                <h6>Fecha:
                                                                    <%=a.fecha%>
                                                                </h6>
                                                                <h6>Comunicaciones:
                                                                    <%=a.subtipo%>
                                                                </h6>
                                                                <h6>Perfil:
                                                                    <%=a.tipo_usuario%>
                                                                </h6>
                                                                <br>
                                                                <h6>Observaciones: </h6>
                                                                <div style="border:2px solid;">
                                                                    <%=a.texto%>
                                                                </div>
                                                                <br>
                                                                <h6>Comentarios del técnico: </h6>
                                                                <textarea class="form-control" rows="3" name="ComentarioTecn" id="ComentarioTecn"></textarea>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Eliminar Aviso</button>
                                                            </div>
                                                        </form>
                                                    </div>

                                                </div>
                                            </div>
                                            <%}%>
                                                <% }) %>
                                </table>
                            </div>

                            <!-- HISTÓRICO DE AVISOS -->
                            <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
                                <br>
                                <table class="table">
                                    <thead class="table-secondary">
                                        <tr>
                                            <th scope="col">Tipo</th>
                                            <th scope="col">Fecha</th>
                                            <th scope="col">Texto</th>
                                            <th scope="col">Acciones</th>
                                        </tr>
                                    </thead>
                                    <% alerts.forEach(a => {%>
                                        <%if(a.estado == "terminado"){%>
                                            <tbody class="table-group-divider">
                                                <tr>
                                                    <th scope="row">
                                                        <%=a.tipo%>
                                                    </th>
                                                    <td data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                        <%=a.fecha%>
