                                                </tr>
                                            </tbody>
                                            <!-- Modal Visualización -->
                                            <div class="modal fade" id="modalVisualizacion<%=a.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <form class="d-flex" role="search" action="/updateTerminateAdmin" method="POST">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
